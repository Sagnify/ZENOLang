// Define functions
define factorial with n
    if n less 2 then
        return 1
    else
        let prev be n minus 1
        call factorial with prev
        return n multiply prev

define greet with name
    say "Hello, " + name + "!"

// Call functionsS
call greet with "Alice"
let result be call factorial with 5
say "5! = " + result

define add_numbers with a,b
    return a add b

let result be call add_numbers with 5,3
say result 